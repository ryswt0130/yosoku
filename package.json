{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "A simple Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npx electron-builder"
  },
  "keywords": [
    "Electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "fluent-ffmpeg": "^2.1.3",
    "sharp": "^0.34.2"
  },
  "dependencies": {
  },
  "build": {
    "appId": "com.example.mymediabrowser",
    "productName": "My Media Browser",
    "electronVersion": "31.0.0",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "mediaRenderer.js",
      "fileScanner.js",
      "thumbnailGenerator.js",
      "index.html",
      "media.html",
      "styles.css",
      "package.json"
    ],
    "asarUnpack": [
      "**/node_modules/sharp/**"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
